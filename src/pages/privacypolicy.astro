---
import { getEntry } from 'astro:content';
import EmailLink from '../components/EmailLink.astro';
import TOC from '../components/TOC.astro';
import Docs from '../layouts/Docs.astro';
import Layout from '../layouts/Layout.astro';
import '../styles/font.css';
import '../styles/global.css';
const entry = await getEntry('docs', 'privacypolicy')!;
const { Content, headings } = await entry.render();
---

<Layout title="Privacy Policy">
  <div class="mx-auto md:mx-[7.5rem] min-h-[80dvh] max-sm:px-5 flex gap-20 mt-20">
    <section class="flex-1">
      <h1 class="text-3xl md:text-4xl font-bebas font-semibold mb-10 tracking-[5px] text-center">
        Datenschutzerklärung
      </h1>

      <div class="text-primary text-xl font-work leading-8">
        <p>
          Verantwortlicher für die Datenverarbeitung Sinne der Datenschutz-Grundverordnung (DSGVO)
          ist:
        </p>
        <div class="font-semibold font-work text-2xl my-2">
          <p>Marco Zausch</p>
          <EmailLink
            encodedEmail="ZWQub2V0c29wQGhjc3Vhem9jcmFt"
            label="Email"
            class="font-semibold font-work text-2xl"
          />
        </div>
      
      </div>

      <Docs>
        <Content />
      </Docs>
    </section>
    <!-- TOC -->
    <TOC headings={headings} />
  </div>
</Layout>
