---
interface Props {
  name: string;
  link: string;
}

const { name, link } = Astro.props;
---

<li class="!my-2">
  <a target="_blank" href={link} class="certificate-link prose prose-stone text-xl font-normal leading-loose tracking-normal dark:prose-invert prose-p:text-pretty hover:text-slate-950">
    {name}
    <!-- <img src="/svg/certificate.svg" alt="certificate" class="certificate-icon" /> -->
  </a>
</li>

<style>
  .certificate-link {
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
    line-height: 1.75;
    font-size: 1rem;
    font-weight: 400;
    transition: color 0.2s ease;
  }

  .certificate-link:hover {
    text-decoration: none;
  }

  .certificate-icon {
    width: 1.1rem;
    height: 1.1rem;
    position: relative;
    top: -0.15rem;
    opacity: 0.8;
    transition: opacity 0.2s ease;
    flex-shrink: 0;
  }

  .certificate-link:hover .certificate-icon {
    opacity: 1;
  }
</style>
