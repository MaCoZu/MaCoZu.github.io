#chart-container {
    display: flex;
    align-items: flex-start;
    margin-top: 10px;
}

.tooltip {
    font-size: 12px;
    font-weight: normal;
    position: absolute;
    padding: 10px;
    text-align: left;
    background: rgba(0, 0, 0, 0.805);
    border: 0.5px solid #cccccc71;
    border-radius: 5px;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.2s;
    color: black;
}

.tooltip td {
    padding: 1.7px 5px;
}

text {
    font-size: 18px;
    font-weight: 400;
    font-family: sans-serif;
}

/* New style for Select All option */
