---
import "../styles/global.css";
---

<script src="/script/model_drawer.js" defer></script>

<!-- drawer  -->
<div class="hidden md:flex z-50 client:load">
    <div
        id="drawer-toggle"
        class="fixed z-30 top-1/2 right-0 inline-block p-2 transition-all duration-200 rounded-lg cursor-pointer"
        aria-expanded="false"
        aria-controls="sidebar_model"
        aria-label="Toggle navigation"
    >
        <svg
            class="w-10 h-10 md:w-full md:h-full dark:text-white"
            width="50"
            height="100"
            viewBox="0 0 50 100"
            xmlns="http://www.w3.org/2000/svg"
        >
            <path
                d="M10 10 H40 M10 20 H40 M10 30 H40"
                style="stroke: #CCC; fill:none; stroke-width: 4px"
                stroke-opacity="0.7"
                stroke-linecap="round"
            >
            </path>
        </svg>
    </div>

    <div
        id="sidebar_model"
        class="fixed top-0 right-0 z-50 w-1/5 h-full transition-all duration-500 transform translate-x-full bg-white dark:bg-gray-800 shadow-lg"
        aria-hidden="true"
        aria-label="Navigation drawer"
        role="dialog"
    >
        <div class="px-6 py-4">
            <!-- Tabel of Content  -->
            <ul class="text-lg font-work mt-4">
                <li class="mb-2">
                    <a
                        href="./toc_graph"
                        class="block font-semibold hover:text-indigo-400"
                        >TOC Graph</a
                    >
                </li>
                <li class="mb-2">
                    <a href="./model" class="block hover:text-indigo-400"
                        >Model</a
                    >
                </li>
                <li class="mb-2">
                    <a
                        href="./supply_and_demand"
                        class="block hover:text-indigo-400">Supply and Demand</a
                    >
                </li>
                <li class="mb-2">
                    <a
                        href="./schelling_segregation"
                        class="block hover:text-indigo-400">Segregation</a
                    >
                </li>
                <li class="mt-1">
                    <a
                        href="./confusion_matrix"
                        class="block hover:text-indigo-400"
                    >
                        Confusion Matrix</a
                    >
                </li>
                <li class="mt-1">
                    <a
                        href="./logistic_growth"
                        class="block hover:text-indigo-400"
                    >
                        Logistic Growth</a
                    >
                </li>
                <li class="mt-1">
                    <a
                        href="./linear_regression"
                        class="block hover:text-indigo-400">Linear Regression</a
                    >
                </li>
                <li class="mt-1">
                    <a
                        href="./logistic_map"
                        class="block hover:text-indigo-400"
                    >
                        Logistic Map</a
                    >
                </li>
                <li class="mt-1">
                    <a
                        href="./normal_distribution"
                        class="block hover:text-indigo-400"
                        >Normal Distribution</a
                    >
                </li>
            </ul>

            <div class="text-xs fixed bottom-10 flex row">
                <a href="./" class="flex items-center">
                    <img
                        id="logo2"
                        class="h-8 sm:h-8 fill-current dark:filter-white"
                        src="../../img/logo/logo.svg"
                        alt="logo"
                    />
                </a>
            </div>
        </div>
    </div>
</div>
