---
interface Props {
    title: string;
    description: string;
    href: string;
    date?: string;
    tag?: string;
    hasGraph?: boolean;
}

const { title, description, href, date, tag, hasGraph = false } = Astro.props;
---

<div class="col-span-1 md:col-span-1 text-pretty">
    <a href={href} class="group block space-y-1">
        <h1
            class="font-literata text-lg uppercase text-gray-600 dark:text-slate-400 tracking-wide font-semibold"
        >
            {title}
        </h1>

        <p>{description}</p>

        <div
            class="flex items-center gap-2 text-sm text-gray-500 dark:text-slate-400 mt-1"
        >
            {
                tag && (
                    <span class="px-2 py-0.5 text-xs bg-blue-100 text-blue-800 rounded">
                        {tag}
                    </span>
                )
            }

            {date && <span>{date}</span>}

