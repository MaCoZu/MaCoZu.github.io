---
import { twMerge } from "tailwind-merge";

interface Props {
    as?: keyof HTMLElementTagNameMap;
    className?: string;
    [key: string]: unknown;
}

const { as: Tag = "h1", className = "", ...attrs } = Astro.props as Props;

const finalClass = twMerge(
    "font-bebas text-4xl text-center mt-20 mb-10",
    className,
);
---

<Tag class={finalClass} {...attrs}>
    <slot />
</Tag>
