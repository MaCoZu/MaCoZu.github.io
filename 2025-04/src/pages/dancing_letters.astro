    <style>
        /* Keyframes for the animation */
        @keyframes jump-spin {
            0% {
                color: #ff9d00;
                transform: translateY(0) rotate(0deg);
            }
            50% {
                color: #ff3300;
                transform: translateY(-30px) rotateY(360deg);
            }
            50% {
                color: #ae03b7;
                transform: translateY(-30px) rotateY(720deg);
            }
